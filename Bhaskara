<?php

print "Insira o valor de A: " ."\n";
$a = fgets(STDIN);

print "Insira o valor de B: " ."\n";
$b = fgets(STDIN);

print "Insira o valor de C: " ."\n";
$c = fgets(STDIN);

    $Delta = (pow($b,2))+(4*$a*$c);
    $X1 = (-$b-sqrt($Delta))/2*$a;
    $X2 = (-$b+sqrt($Delta))/2*$a;

print "O valor de A é: $a \n";
print "O valor de B é: $b \n";
print "O valor de Delta é: $Delta \n";
print "O valor de x1 é: $X1 \n";
print "O valor de x2 é: $X2 \n";
